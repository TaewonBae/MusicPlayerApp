                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/album_cover9"
                            android:padding="5dp"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="B.T.S"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="작은 것들을 위한 시"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cover10"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/album_cover10"
                            android:padding="5dp"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="에일리"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="노래가 늘었어"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>